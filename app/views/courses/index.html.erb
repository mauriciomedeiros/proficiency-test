<h1>Courses</h1>

<% if flash[:notice] %>
    <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
<% end %>

<%= link_to 'New Course', new_course_path, class: "btn btn-primary" %>
<br><br>
<table class="table table-bordered">
   <thead>
      <tr>
         <th>Name</th>
         <th>Description</th>
         <th class="text-center col-md-2">Status</th>
         <th class="col-md-1"></th>
         <th class="col-md-1"></th>
      </tr>
   </thead>

   <tbody>
      <% @courses.each do |course| %>
         <tr>
            <td> <%= course.name %> </td>
            <td> <%= course.description %> </td>
            <td class="text-center" > <%= course.status %> </td>
            <td class="text-center" > <%= button_to "Edit", edit_course_path(course), class: "btn btn btn-warning" %> </td>
            <td class="text-center" > <%= button_to "Destroy", course, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?'} %> </td>
        </tr>
      <% end  %>
   </tbody>
</table>
